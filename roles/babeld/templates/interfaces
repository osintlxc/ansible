# {{ ansible_managed }}

auto {{ babel_interface }}
iface {{ babel_interface }} inet6 static
	bridge_ports none
	bridge-maxwait 0
	# set interface up
	up ip link set $IFACE up
	down ip link set $IFACE down
	address {{ babel_ipv6.address }}

allow-hotplug l3roam0
auto l3roam0
iface l3roam0 inet manual
	up ip link set $IFACE up
	post-up ip -6 a add {{ babel_ipv6.address }} dev lo
	post-up ip -6 r add {{ ipv6_babel_network }} dev l3roam0 t 252

allow-hotplug mmfd0
auto mmfd0
iface mmfd0 inet manual
	address  fe80::1
	post-up ip r add ff05::2:1001/128 dev mmfd0 table local
